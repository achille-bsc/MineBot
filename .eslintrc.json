{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "rules": {
    "@typescript-eslint/no-non-null-assertion": "off",
    "prettier/prettier": [
      2,
      {
        "trailingComma": "none",
        "tabWidth": 2,
        "useTabs": false,
        "endOfLine": "lf",
        "quoteProps": "as-needed",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  }
}
